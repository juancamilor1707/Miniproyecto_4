<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.miniproyecto4.controller.GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <top>
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="BATALLA NAVAL" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
            <Label fx:id="statusLabel" text="Coloca tus barcos" style="-fx-font-size: 16px;" />
            <Label fx:id="instructionLabel" text="Haz clic en el tablero para colocar tus barcos" />
            <Label fx:id="shipsRemainingLabel" text="Barcos restantes: 10" />
            <Label fx:id="currentShipLabel" text="Colocando: Portaaviones (4 casillas)" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="40.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Tu Tablero" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="playerShipsLabel" text="Barcos: 10" />
                <VBox fx:id="playerBoardContainer" />
            </VBox>

            <VBox fx:id="enemyBoardBox" alignment="CENTER" spacing="10.0" visible="false">
                <Label text="Tablero Enemigo" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="enemyShipsLabel" text="Barcos: 10" />
                <VBox fx:id="enemyBoardContainer" />
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Button fx:id="rotateButton" text="Rotar (R)" prefWidth="150.0" />
            <Button fx:id="startGameButton" text="Comenzar Juego" prefWidth="150.0" disable="true" />
            <Button fx:id="showEnemyBoardButton" text="Ver Tablero Enemigo (DEBUG)" prefWidth="200.0" visible="false" />
            <Button fx:id="backToMenuButton" text="Volver al MenÃº" prefWidth="150.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" />
        </HBox>
    </bottom>
</BorderPane>