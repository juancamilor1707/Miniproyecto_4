<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.miniproyecto4.controller.MenuController">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>

    <Label text="BATALLA NAVAL" style="-fx-font-size: 36px; -fx-font-weight: bold;" />

    <Label text="Ingresa tu nickname:" style="-fx-font-size: 16px;" />

    <TextField fx:id="nicknameField" promptText="Nickname" maxWidth="200.0" style="-fx-font-size: 14px;" />

    <Button fx:id="newGameButton" text="Nuevo Juego" prefWidth="200.0" style="-fx-font-size: 16px;" />

    <Button fx:id="continueButton" text="Continuar" prefWidth="200.0" style="-fx-font-size: 16px;" />

    <Button fx:id="helpButton" text="Ayuda" prefWidth="200.0" style="-fx-font-size: 16px;" />

    <Button fx:id="exitButton" text="Salir" prefWidth="200.0" style="-fx-font-size: 16px;" />
</VBox>